<div class="container-fluid bg-light" style="height:90vh; overflow:auto">

           <div class="row">
             <div class="col-12 d-flex justify-content-center mt-5 align-items-center">
                <h1> You Must Login</h1>      
             </div>
           </div>


           <div class="row">
             <div class="col-12 d-flex justify-content-center mt-5">
        
                <form id="userLoginForm">
                    <div class="form-group row">
                      <label for="loginEmail">Email address</label>
                      <input type="email" class="form-control" name="email" placeholder="Enter email">            
                    </div>

                    <div class="form-group row">
                      <label for="loginPassword">Password</label>
                      <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                    
                    <div class="row mb-5 text-center">
                      <button id="registerButton"> Register As New User </button> 
                    </div>

                    <div class="form-group mt=5 w-100">
                      <button type="submit" class="btn btn-secondary btn-lg btn-block">Login</button>       
                    </div>                   

                </form>
                    
            </div>
          </div>
</div>







